<% include partials/header %>
funds
<a href="/logout">Log Out</a>
<h1><%= user.username %></h1>


<form action="/bankname?_method=PUT" method="POST">
    <input name="bankname" type="text" placeholder="rename">
    <input type="submit" value="Change">
</form>
<p>Bank Name: <%= user.bank.name %></p>
<p>Bank Balance: <%= (user.bank.balance).toFixed(2).replace(/\d(?=(\d{3})+\.)/g, '$&,')  %></p>
<form action="/deposit?_method=PUT" method="POST">
    <input name="deposit" type="number" step="0.01" placeholder="deposit">
    <input type="submit" value="deposit">
</form>

<form action="/newcard" method="POST">
    <input type="text" name="card[name]" placeholder="New card Name"> 
    <input type="submit" value="Create">
</form>

<h1>Cards</h1>
<% cards.forEach(function(card){%>
    <p><%= card.name%></p>
    <p><%= card.credit%></p>
    <form action="/card/<%= card._id%>?_method=PUT" method="POST">
        <input type="number" step="0.01" name="purchase" placeholder="placeholder">
        <input type="submit" value="purchase">
    </form>
    
<% }); %>

<% include partials/header %>